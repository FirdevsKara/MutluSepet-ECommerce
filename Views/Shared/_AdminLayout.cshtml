@* Admin Paneli için Layout *@
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MutluSepet Admin</title>
    
    @* Bootstrap CSS *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Products", "Admin")">
                MutluSepet Admin
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar" aria-controls="adminNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="adminNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Products", "Admin")">Ürünler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Categories", "Admin")">Kategoriler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Orders", "Admin")">Siparişler</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    @* Çıkış butonu *@
                    <li class="nav-item">
                        <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                            <button type="submit" class="btn btn-outline-light">Çıkış</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Sayfa içeriği buraya render edilecek -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    @* Scriptler *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
