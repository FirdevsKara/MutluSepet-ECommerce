@model IEnumerable<MutluSepet.Models.Category>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Kategoriler";
}

<h2>@ViewData["Title"]</h2>

<div class="d-flex justify-content-end mb-3">
    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
        Yeni Kategori Ekle
    </button>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var cat in Model)
        {
            <tr>
                <td>@cat.Id</td>
                <td>@cat.Name</td>
                <td>
                    <a class="btn btn-danger btn-sm" asp-action="DeleteCategory" asp-route-id="@cat.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal: Yeni Kategori Ekle -->
<div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addCategoryLabel">Yeni Kategori Ekle</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form asp-action="AddCategory" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label">Kategori Adı</label>
                <input type="text" name="Name" class="form-control" required />
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-success">Ekle</button>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>
