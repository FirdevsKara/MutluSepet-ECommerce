@model IEnumerable<MutluSepet.Models.CartItem>

<h2>Sepetim</h2>

@if (!Model.Any())
{
    <p>Sepetiniz boş.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ürün</th>
                <th>Fiyat</th>
                <th>Miktar</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="@(string.IsNullOrEmpty(item.Product.ImageUrl) ? "/images/no-image.png" : item.Product.ImageUrl)" 
                                 alt="@item.Product.Name" width="60" height="60" class="me-2" />
                            <span>@item.Product.Name</span>
                        </div>
                    </td>
                    <td>@item.Product.Price ₺</td>
                    <td>@item.Quantity</td>
                    <td>
                        <form asp-action="Remove" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger">Sepetten Kaldır</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <!-- Siparişi Tamamla Butonu -->
    <a class="btn btn-success mt-3" asp-controller="Checkout" asp-action="Checkout">Siparişi Tamamla</a>
}
