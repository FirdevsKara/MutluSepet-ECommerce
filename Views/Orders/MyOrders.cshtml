@model IEnumerable<MutluSepet.Models.Order>

@{
    ViewData["Title"] = "Siparişlerim";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p>Henüz bir siparişiniz yok.</p>
}
else
{
    @foreach(var order in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Sipariş ID: @order.Id | Tarih: @order.OrderDate
            </div>
            <ul class="list-group list-group-flush">
                @foreach(var item in order.OrderItems)
                {
                    <li class="list-group-item">
                        @item.Product.Name - @item.Quantity adet - @item.Price.ToString("C") - Toplam: @(item.Quantity * item.Price).ToString("C")
                    </li>
                }
                <li class="list-group-item fw-bold">
                    Sipariş Toplamı: @order.TotalAmount.ToString("C")
                </li>
            </ul>
        </div>
    }
}
