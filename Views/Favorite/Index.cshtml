@model IEnumerable<MutluSepet.Models.Favorite>

<h2>Favorilerim</h2>

@if (!Model.Any())
{
    <p>Favorileriniz boş.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Ürün</th>
                <th>Fiyat</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.Name</td>   <!-- Ürün adı -->
                <td>@item.Product.Price ₺</td> <!-- Ürün fiyatı -->
                <td>
                    <!-- Kaldırma butonu -->
                    <form asp-action="Remove" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">Favorilerden Kaldır</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
