@page
@model MutluSepet.Areas.Identity.Pages.Account.RegisterModel
@{
    Layout = null; // Navbar ve site layoutunu kaldırır
    ViewData["Title"] = "Kayıt Ol";
}

<div style="max-width:450px; margin:100px auto; padding:40px; background-color:#FADADD; border-radius:15px; box-shadow:0 0 15px rgba(0,0,0,0.1);">
    <h2 style="text-align:center; margin-bottom:30px; font-weight:bold;">@ViewData["Title"]</h2>

    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

        <div class="mb-3">
            <input asp-for="Input.Email" class="form-control" placeholder="E-posta" autocomplete="username" style="height:45px; font-size:16px; padding-left:10px;" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <input asp-for="Input.Password" class="form-control" placeholder="Şifre" autocomplete="new-password" type="password" style="height:45px; font-size:16px; padding-left:10px;" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Şifre Tekrar" autocomplete="new-password" type="password" style="height:45px; font-size:16px; padding-left:10px;" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button id="registerSubmit" type="submit" class="btn" style="width:100%; background-color:#FF7F50; color:white; font-weight:bold; font-size:16px; height:50px; border:none; border-radius:8px;">
            Kayıt Ol
        </button>
    </form>

    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
    {
        <hr style="margin:20px 0;" />
        <p style="text-align:center; font-weight:bold;">Veya diğer hesaplarla kayıt ol:</p>
        <div style="text-align:center;">
            @foreach (var provider in Model.ExternalLogins!)
            {
                <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-outline-secondary m-1" name="provider" value="@provider.Name">
                        @provider.DisplayName
                    </button>
                </form>
            }
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

