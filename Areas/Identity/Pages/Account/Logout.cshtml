@page
@model LogoutModel
@{
    Layout = null; // Navbar ve site layout’unu kaldırır
    ViewData["Title"] = "Çıkış Yapıldı";
}

<div style="text-align:center; margin-top:100px;">
    <h1>@ViewData["Title"]</h1>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <form asp-area="Identity" asp-page="/Account/Logout" 
              asp-route-returnUrl="@Url.Content("~/")" 
              method="post">
            <button type="submit" class="btn btn-primary">Click here to Logout</button>
        </form>
    }
    else
    {
        <p>Başarılı bir şekilde çıkış yaptınız.</p>
        <a href="@Url.Content("~/")" class="btn btn-success mt-3">Ana sayfaya git</a>
    }
</div>
