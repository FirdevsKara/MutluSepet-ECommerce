@page
@model MutluSepet.Areas.Identity.Pages.Account.LoginModel
@{
    Layout = null; // Navbar ve site layoutunu kaldırır
    ViewData["Title"] = "Giriş Yap";
}

<div style="max-width:400px; margin:100px auto; padding:40px; background-color:#FADADD; border-radius:15px; box-shadow:0 0 15px rgba(0,0,0,0.1);">
    <h2 style="text-align:center; margin-bottom:30px; font-weight:bold;">@ViewData["Title"]</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <form method="post">
        <div class="mb-3">
            <input asp-for="Input.Email" class="form-control" placeholder="E-posta" style="height:45px; font-size:16px; padding-left:10px;" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <input asp-for="Input.Password" class="form-control" placeholder="Şifre" type="password" style="height:45px; font-size:16px; padding-left:10px;" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="Input.RememberMe" class="form-check-input" />
            <label asp-for="Input.RememberMe" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn" style="width:100%; background-color:#FF7F50; color:white; font-weight:bold; font-size:16px; height:50px; border:none; border-radius:8px;">
            Giriş Yap
        </button>
    </form>

    @if (Model.ExternalLogins?.Count > 0)
    {
        <hr style="margin:20px 0;" />
        <p style="text-align:center; font-weight:bold;">Veya diğer hesaplarla giriş yap:</p>
        <div style="text-align:center;">
            @foreach (var provider in Model.ExternalLogins)
            {
                <button type="submit" class="btn btn-outline-secondary m-1" formaction="ExternalLogin?provider=@provider.Name&returnUrl=@Model.ReturnUrl">
                    @provider.DisplayName
                </button>
            }
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
