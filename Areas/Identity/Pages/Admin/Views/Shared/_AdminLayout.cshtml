<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body { padding-top: 70px; }
        .sidebar { min-height: 100vh; background-color: #f8f9fa; padding: 15px; }
        .sidebar a { display: block; margin: 5px 0; font-weight: 500; }
        .card { border-radius: 10px; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Dashboard","Admin", new { area="Admin"})">Admin Panel</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index">Siteye Dön</a>
                    </li>
                    <li class="nav-item">
                        <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                            <button type="submit" class="btn btn-link nav-link">Çıkış Yap</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 sidebar">
                <a class="btn btn-outline-primary w-100 mb-2" href="@Url.Action("Dashboard","Admin", new { area="Admin"})">Dashboard</a>
                <a class="btn btn-outline-primary w-100 mb-2" href="@Url.Action("Products","Admin", new { area="Admin"})">Ürünler</a>
                <a class="btn btn-outline-primary w-100 mb-2" href="@Url.Action("Orders","Admin", new { area="Admin"})">Siparişler</a>
                <a class="btn btn-outline-primary w-100 mb-2" href="@Url.Action("Users","Admin", new { area="Admin"})">Kullanıcılar</a>
            </div>
            <div class="col-md-10">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
